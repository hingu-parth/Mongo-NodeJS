<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('./partials/headers.ejs') %>
  </head>
  <body>
    <form action="/bug" method="POST">
      <div class="container">
        <div class="card">
          <div class="card-header"><h1><%= title %></h1></div>
          <div class="card-body">
            <div class="mb-3">
              <input
                name="title"
                class="form-control"
                type="text"
                placeholder="Title"
              />
            </div>
            <div class="mb-3">
              <input
                name="description"
                class="form-control"
                type="text"
                placeholder="Description"
              />
            </div>
            <div class="mb-3">
              <input
                name="assignee"
                class="form-control"
                type="text"
                placeholder="Assignee"
              />
            </div>
          </div>

          <div class="card-footer">
            <button type="submit" class="btn btn-secondary">Submit</button>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
